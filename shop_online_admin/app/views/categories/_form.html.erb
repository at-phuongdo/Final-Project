<%= form_with(model: category, local: true) do |form| %>
<% if category.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

  <ul>
    <% category.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div box-body col-md-8>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :category_name ,:class => 'form-control'%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :category_description,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= form.label :parent_id %>
    <%= form.select :parent_id, options_for_select([['Parent', '0']])+options_from_collection_for_select(Category.where(parent_id: 0), 'id', 'name', form.object.parent_id), :class => 'form-control'%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
