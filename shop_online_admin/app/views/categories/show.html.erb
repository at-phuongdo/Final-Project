<h2>Category</h2>
<%= link_to 'Edit', edit_category_path(@category), :class => 'btn btn-warning' %> |
<%= link_to 'Destroy', @category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %> |
<%= link_to 'Back', categories_path, :class => 'btn btn-primary' %>
<br>
<table class="table table-bordered">
  <tr>
    <td><strong>Name:</strong></td>
    <td><%= @category.name %></td>
  </table-bordered>

  <tr>
    <td><strong>Description:</strong></td>
    <td><%= @category.description %></td>
  </tr>

  <tr>
    <td><strong>Parent:</strong></td>
    <td><%= @parent_name %></td>
  </tr>
</table>
<!-- Show items of this category -->
<% if @items_category.present? %>
<h2>Products in <%=@category.name%> </h2>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Avatar</th>
      <th>Status</th>
      <th>Quantity</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items_category.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= image_tag(item.avatar, size: "40x40") if item.avatar?%></td>
      <td><%= item.status %></td>
      <td><%= item.quantity %></td>
      <td><%= Shop.find(item.shop_id).name %></td>
      <td><%= link_to 'Show', item, :class => 'btn btn-primary' %></td>
      <td><%= link_to 'Edit', edit_item_path(item), :class => 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger'%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="box-footer clearfix">
 <ul class="pagination pagination-sm no-margin pull-right">
   <li>
     <%= link_to category_path(page: params[:page].to_i-1 < 1 ? 1 : params[:page].to_i-1) do %>
     <span>&laquo;</span>
     <% end %>
   </li>
   <% for i in (@start_page..@end_page)%>
   <li> <%=link_to i, category_path(:page => i)%></li>
   <% end %>
   <li>
     <%= link_to category_path(page: (params[:page].to_i>@page_numbers ? @page_numbers : params[:page].to_i)) do %>
     <span>&raquo;</span>
     <% end %>
   </li>
 </ul>
</div>
<%end%>
