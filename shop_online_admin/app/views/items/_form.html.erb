<%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

  <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div box-body col-md-8>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :item_price, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :avatar %> 
    <%= form.text_field :avatar, id: :item_avatar, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, id: :item_status, :class => 'form-control' %>
  </div>
  <table>
    <tr>
      <td><%= form.label :quantity %></td>
      <td><%= form.number_field :quantity, id: :item_quantity, :class => 'form-control' %></td>
    </tr>
    <tr>
      <td><%= form.label :unit_id %></td>
      <td><%= form.select :unit_id, options_from_collection_for_select(Unit.all, 'id', 'name',form.object.unit_id), :class => 'form-control'%></td>
    </tr>
    <tr>
      <td><%= form.label :category_id %></td>
      <td><%= form.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name'), :class => 'form-control'%></td>
    </tr>
    <tr>
     <td><%= form.label :shop_id %></td>
     <td><%= form.select :shop_id, options_from_collection_for_select(Shop.all, 'id', 'name', form.object.shop_id), :class => 'form-control'%></td>
   </tr>
 </table>
 <div class="field">
  <%= form.label :description %>
  <%= form.cktext_area :description, id: :item_description %>
</div>
<br>
<div class="actions">
  <%= form.submit %>
</div>
</div>

<% end %>
