<%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

  <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<table >
  <tr>
    <td><%= form.label :name %></td>
    <td><%= form.text_field :name, id: :item_name %></td>
  </tr>
  <tr>
    <td><%= form.label :price %></td>
    <td> <%= form.text_field :price, id: :item_price %></td>
  </tr>
  <tr>
    <td><%= form.label :avatar %> </td>
    <td><%= form.text_field :avatar, id: :item_avatar %></td>
  </tr>
  <tr>
    <td><%= form.label :status %></td>
    <td> <%= form.text_field :status, id: :item_status %></td>
  </tr>
  <tr>
    <td> <%= form.label :quantity %></td>
    <td><%= form.number_field :quantity, id: :item_quantity %></td>
  </tr>
  <tr>
    <td> <%= form.label :unit_id %></td>
    <td> <%= form.select :unit_id, options_from_collection_for_select(Unit.all, 'id', 'name',form.object.unit_id)%></td>
  </tr>
  <tr>
    <td> <%= form.label :category_id %></td>
    <td> <%= form.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name', form.object.categorys.first.id)%></td>
  </tr>
  <tr>
    <td><%= form.label :shop_id %></td>
    <td><%= form.select :shop_id, options_from_collection_for_select(Shop.all, 'id', 'name', form.object.shop_id)%></td>
  </tr>
</table>
<div class="field">
  <%= form.label :description %>
  <%= form.cktext_area :description, id: :item_description %>
</div>
<br>
<div class="actions">
  <%= form.submit %>
</div>

<% end %>
