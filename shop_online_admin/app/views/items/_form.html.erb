<%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
  <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="box-body col-md-10">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, id: :item_price,min: 0,:class=> 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :avatar %> 
    <%= form.file_field :avatar, id: :item_avatar%>
  </div>
  <div class="form-group">
    <%= form.label :images %> 
    <%= form.file_field :image_id,:multiple => true %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, [['Còn hàng', "Còn hàng"], ['Hết hàng', "Hết hàng"]],{},{:class => 'form-control'}  %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :item_quantity, :class => 'form-control', min: 0 %>
  </div>
  <div class="form-group">
    <%= form.label :unit_id %>
    <%= form.select :unit_id, options_for_select([['NULL', 'NULL']])+options_from_collection_for_select(Unit.all, 'id', 'name',form.object.unit_id),{}, :class => 'form-control'%>
  </div>
   <div class=" form-group">
   <%= form.label :shop_id %>
   <%= form.select :shop_id, options_from_collection_for_select(Shop.all, 'id', 'name', form.object.shop_id), {},:class => 'form-control'%>
 </div>
  <div class=" form-group">
    <%= form.label :category_id %>
    <%= select_tag 'category_id[]', options_from_collection_for_select(Category.all, 'id', 'name'), :class =>' taggingSelect2', multiple: 'true'%>
  </tr>
 
 <div class="field">
  <%= form.label :description %>
  <%= form.cktext_area :description, id: :item_description %>
</div>
<br>
<div class="actions">
  <%= form.submit :class => 'btn btn-primary' %>
</div>
</div>

<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $(".taggingSelect2").select2({
      placeholder: "Choose Category", //placeholder
      tags: true
    });
  })
</script>

