<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Avatar</th>
      <th>Status</th>
      <th>Quantity</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= image_tag(item.avatar, size: "40x40")%></td>
        <td><%= item.status %></td>
        <td><%= item.quantity %></td>
        <td><%= Shop.find(item.shop_id).name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

